		<script>
			$("#btnLogin").click(function() {
				var username = $("#username").val();
				var password = $("#password").val();
				$("#progress").html('Loading...');
				$("#progress").css('color', 'green');
				$("#progress").css('font-weight', 'bolder');

				$.post('http://78.46.254.56/GIPC/mobileapi/pgLogin.php', {
					username : username,
					password : password
				}, function(data, status) {
					if (data == 'failed') {
						$("#progress").html('Incorrect credentials');
						$("#progress").css('color', 'red');
						$("#progress").css('font-weight', 'bolder');

					} else {
						var sep = data.split("|");
						$("#contentApplications").html(sep[0]);
						$("#contentQuota").html(sep[1]);
						$("#contentOpp").html(sep[2]);
						$("#progress").html('Redirecting...');

						// window.location = '#pgFunctions';
						$.mobile.pageContainer.pagecontainer("change", "#pgFunctions", {transition: "pop"});
						// $.mobile.location.href("#pgFunctions", {transition: "pop"})
						// $.mobile.changePage("#pgFunctions");
						
						$("#progress").html('');
					};
				});

				// event.preventDefault();
			});
			$("#btnsignup").click(function() {
				var fname = $("#fname").val();
				var gender = $("#gender").val();
				var username = $("#susername").val();
				var password = $("#spassword").val();
				var email = $("#email").val();
				var mobile = $("#mobile").val();
				$("#sprogress").html('Loading...');
				$("#sprogress").css('color', 'green');
				$("#sprogress").css('font-weight', 'bolder');

				$.post('http://78.46.254.56/GIPC/mobileapi/signup.php', {
					fname : fname,
					gender : gender,
					username : username,
					password : password,
					email : email,
					mobile : mobile
				}, function(data, status) {
					if (data == 'failed') {
						$("#sprogress").html('Failed. Please try again later.');
						$("#sprogress").css('color', 'red');
						$("#sprogress").css('font-weight', 'bolder');
					} else if(data == 'success') {
						$("#sprogress").html('Sign up complete! You can go back to <a href="#pgLogin" style="text-decoration: none;">&larr;Sign in</a>.');
						$("#sprogress").css('color', 'green');
						$("#sprogress").css('font-weight', 'bolder');
					} else if(data == 'taken') {
						$("#sprogress").html('Username has already been taken. Please try another one.');
						$("#sprogress").css('color', 'red');
						$("#sprogress").css('font-weight', 'bolder');
					}
				});

				// event.preventDefault();
			});
		</script>
